<div id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <div class="jumbotron jumbotron-fluid">
                    <div class="container">
                        <h1 class="display-4">
                            {{!--
                            <h1>{{msg}}: "Reference person's name"</h1> --}}
                            <h2>My Profile</h2>
                            <span id="greeting"></span>

                        </h1>
                        <p class="lead">Enter user information</p>

                        <img src="./js/images/blueberries.jpg" alt="Fruits" id="blueberriesImage">
                        <div id="userInformation">

                            <img src="./js/images/info_ball.png" alt="Fruits" id="infoImage">

                            <button id="ViewProfile" type='button' class="btn btn-success my-2 my-sm-0" data-toggle="modal" data-dismiss="modal" data-target="#viewProfileData">View Profile</button>

                            <button id="editProfile" type='button' class="btn btn-success my-2 my-sm-0" data-toggle="modal" data-dismiss="modal" data-target="#editProfileData">Edit Profile</button>
                        </div>
                    </div>

                    <div class="modal fade" id="viewProfileData">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <!-- header -->
                                <div class="modal-header">
                                    <h3 class="modal-title">Profile Information</h3>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <!-- body -->
                                <div class="modal-header">
                                    <form role="form">
                                        <h3>Profile Information</h3>
                                        <div class="form-group">
                                            <label for="example-description">Name:</label>
                                            <h7 id="viewProfileName" for="example-description"></h7>

                                        </div>
                                        <div class="form-group">
                                            <label for="example-description">Age:</label>
                                            <h7 id="viewProfileAge" for="example-description"></h7>
                                        </div>
                                        <div class="form-group"></div>
                                        <label for="example-description">Weight:</label>
                                        <h7 id="viewProfileWeight" for="example-description"></h7>
                                </div>
                                <div class="form-group">
                                    <label for="example-description">Calorie Goal:</label>
                                    <h7 id="viewProfileCalorieGoal" for="example-description"></h7>
                                </div>
                                <div class="form-group">
                                    <label for="example-description">Calories/Day:</label>
                                    <h7 id="viewProfileCaloriesAmount" for="example-description"></h7>
                                </div>
                                <button id="editProfile" type='button' class="btn btn-success my-2 my-sm-0" data-toggle="modal" data-dismiss="modal" data-target="#editProfileData">Edit Profile</button>
                                <br>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="editProfileData">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- header -->
                            <div class="modal-header">
                                <h3 class="modal-title">Enter your profile Information</h3>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <!-- body -->
                            <div class="modal-header">
                                <form role="form">
                                    <h3>Enter your Profile Information</h3>
                                    <div class="form-group">
                                        <label for="example-description">Name</label>
                                        <input class="form-control" id="profileName" aria-describedby="example-description" placeholder=""></input>
                                    </div>
                                    <div class="form-group">
                                        <label for="example-description">Age</label>
                                        <input class="form-control" id="profileAge" aria-describedby="example-description" placeholder=""></input>
                                    </div>
                                    <div class="form-group">
                                        <label for="example-description">Weight</label>
                                        <input class="form-control" id="profileWeight" aria-describedby="example-description" placeholder=""></input>
                                    </div>

                                    <div class="form-group">
                                        <label for="example-description">Calorie Goal (lose, gain, maintain)</label>
                                        <input class="form-control" id="profileCalorieGoal" aria-describedby="example-description" placeholder="Feed Me!"></input>
                                    </div>
                                    <div class="form-group">
                                        <label for="example-description">Calories (Daily Amount)</label>
                                        <input class="form-control" id="profileCalorieGoalAmount" aria-describedby="example-description" placeholder="Feed Me!"></input>
                                    </div>
                                    <button id="profileFormSubmit" class="btn btn-primary float-left">Submit Profile Details</button>
                                    <br>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="jumbotron jumbotron-fluid">
                    <div class="container">
                        <h1 class="display-4">Are You On Track?</h1>
                        <h3>Summary of Calories</h3>
                        <img src="./js/images/healthyFood.jpg" alt="Fruits" id="foodImage">
                        <ul id="example-list" class="list-group">
                            {{#each userData}}
                            <li data-id="{{this.id}}" class="list-group-item">
                                <a href="example/{{this.id}}">{{this.text}}</a>
                                <button class="btn btn-danger float-right delete">ï½˜</button>
                            </li>
                            {{/each}}
                        </ul>



                        <form id="onTrackForm">
                            <div class="form-group ">
                                <label for="formGroupExampleInput">What did you eat?</label>
                                <input type="text" class="form-control" id="foodInput" placeholder="Example input">
                            </div>
                            {{!--
                            <div class="form-group">
                                <label for="formGroupExampleInput2">Another label</label>
                                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input">
                            </div> --}} {{!--
                            <div class="form-group">
                                <label for="formGroupExampleInput2">Another label</label>
                                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input">
                            </div>
                            <div class="form-group">
                                <label for="formGroupExampleInput2">Another label</label>
                                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input">
                            </div> --}}
                            <div>
                                <button id="submitFood" class="btn btn-success ">Submit</button>
                            </div>
                            <button class='btn btn-success' id='sendFoodToDb'>Track Meal?</button>

                        </form>
                    </div>

                </div>
                <br>
                <br>
            </div>
        </div>
    </div>
</div>
</div>

